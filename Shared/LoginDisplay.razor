<AuthorizeView>
    <Authorized>
        <MudLink Href="Identity/Account/Manage" Color="Color.Tertiary">Welcome, @context.User.Identity?.Name!</MudLink>
            <MudSpacer></MudSpacer>
            <MudButton Color="Color.Tertiary" StartIcon="@MudBlazor.Icons.Material.Filled.Logout"
                Href="Identity/Account/Logout">Logout</MudButton>
        </Authorized>
        <NotAuthorized>
            <MudLink Href="Identity/Account/Login" Color="Color.Tertiary">Login</MudLink>
        </NotAuthorized>
    </AuthorizeView>
    <AuthorizeView Roles="Administrator">
        <MudButton Color="Color.Tertiary" StartIcon="@MudBlazor.Icons.Material.Filled.AppRegistration"
            Href="Identity/Account/Register">Register</MudButton>
    </AuthorizeView>
