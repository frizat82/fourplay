@inherits LayoutComponentBase

<MudThemeProvider IsDarkMode="true" />
<MudDialogProvider />
<MudSnackbarProvider />

<PageTitle>Four Who?</PageTitle>

<MudLayout>
    <MudAppBar Elevation="0" Class="mud-primary">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start"
            OnClick="@(_ => DrawerToggle())" />
        <LoginDisplay />
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2">
        <NavMenu> </NavMenu>
    </MudDrawer>
    <MudMainContent>
        <MudContainer Class="my-4 pt-16">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>
